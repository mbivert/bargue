{{- $page := index .args 0 -}}
{{- $lang  := index .args 1 -}}

{{- $date   := index .db.pages $page $lang "date" -}}
{{- $update := index .db.pages $page $lang "update" -}}
{{- if and $update (ne $update $date) }}
<u>{{ index .db.i18n "update" $lang }}</u>:
	{{- datefmt $update "2006-01-02" "2006-01-02" -}}
{{- end -}}